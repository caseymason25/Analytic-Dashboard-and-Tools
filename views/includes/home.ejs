      %>
      <div class="home-section-header">
        <h2><i class="fa fa-wrench" aria-hidden="true"></i> Dashboard Configuration</h2>
      </div>
      <%
      if(perm.DASHCONFIG & role) {
        %>
        <a class="home-link" id="home-link-views">
          <div class="home-link-wrapper" title="Views">
            <div class="home-link-icon-wrapper">
              <span class="fa home-link-icon">V</span>
            </div>
            <div class="home-link-text">
              <h4>Views</h4>
              <span class="home-link-description">Configure Views for use in the AllView Dashboards.</span>
            </div>
          </div>
        </a>
        <%
      }
      %>
      <%
      if(perm.QUEUES & role) {
        %>
        <a class="home-link" id="home-link-groups">
          <div class="home-link-wrapper" title="Groups">
            <div class="home-link-icon-wrapper">
              <span class="fa home-link-icon">G</span>
            </div>
            <div class="home-link-text">
