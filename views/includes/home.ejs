      }
      if(perm.STATS & role) {
        %>
        <a class="home-link" id="home-link-stats">
          <div class="home-link-wrapper" title="Stats">
            <div class="home-link-icon-wrapper">
              <span class="fa home-link-icon">S</span>
            </div>
            <div class="home-link-text">
              <h4>Stats</h4>
              <span class="home-link-description">Review various stats on the server.</span>
            </div>
          </div>
        </a>
        <%
      }
      if(perm.SERVER & role) {
        %>
        <a class="home-link" id="home-link-server-options">
          <div class="home-link-wrapper" title="Server Options">
            <div class="home-link-icon-wrapper">
              <span class="fa home-link-icon">S</span>
            </div>
            <div class="home-link-text">
              <h4>Server Options</h4>
              <span class="home-link-description">Configure settigs on the server.</span>
            </div>
          </div>
        </a>
        <%
      }
      %>
      <div class="home-section"></div>
      <%
    }
    %>

  </div>
  <%
} //end logged_in check
%>
