    <div class="home-section-header">
      <h2><img src="/img/mrpingdark.png" style="height: 30px;"/> Pings Awards</h2>
    </div>
    <a class="home-link" id="home-link-manual-ping-awards">
      <div class="home-link-wrapper" title="Manual Ping Submission">
        <div class="home-link-icon-wrapper">
          <span class="fa home-link-icon">P</span>
        </div>
        <div class="home-link-text">
          <h4>Ping Award Submission</h4>
          <span class="home-link-description">Submit a Ping Award.</span>
        </div>
      </div>
    </a>
    <%
    if(perm.PINGAWARDS & role) {
      %>
      <a class="home-link" id="home-link-ping-awards">
        <div class="home-link-wrapper" title="Ping Awards">
          <div class="home-link-icon-wrapper">
            <span class="fa home-link-icon">T</span>
          </div>
          <div class="home-link-text">
            <h4>Team Ping Awards</h4>
            <span class="home-link-description">Review positive survey comments and submit associate ping awards in bulk.</span>
          </div>
        </div>
      </a>
      <%
    }
    if(perm.PINGADMIN & role) {
      %>
      <a class="home-link" id="home-link-ping-awards-admin">
        <div class="home-link-wrapper" title="Ping Awards Admin">
          <div class="home-link-icon-wrapper">
            <span class="fa home-link-icon">P</span>
          </div>
